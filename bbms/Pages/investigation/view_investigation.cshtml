<!--model-->
<div class="modal fade" id="add" tabindex="-1" aria - labelledby="updateuserLabel" ariahidden="true">
    <div class="modal-dialog">
        <div class="modal-content" style="width:140%;">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="updateuserLabel" style=" font-family : Tahoma; font-weight : bolder; color :var(--sidebar-color);">New Donor</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <form method="Post">
                    <div class="content">

                        <div class="selectbox">
                            <label>Donor ID</label>
                            <select asp-for="SelectedDonorId" id="donorId" class="form-control">
                                <option value="">-- Select Donor --</option>
                                @foreach (var donor in Model.DonorList)
                                {
                                    <option value="@donor.id">@donor.id</option>
                                }
                            </select>
                        </div>
                        <div class="inputbox">
                            <label>Donor Name</label>
                            <input asp-for="SelectedDonorName" type="text" id="SelectedDonorName" name="name" required autocomplete="off" />
                        </div>

                        <div class="inputbox">
                            <label>Donor Age(< 55, > 18)</label>
                            <input asp-for="SelectedDonorAge" type="text" id="SelectedDonorAge" name="age" required autocomplete="off" />
                        </div>
                        <div class="inputbox">
                            <label>Donor Gender</label>
                            <input asp-for="SelectedDonorGender" type="text" id="SelectedDonorGender" name="gender" required autocomplete="off" />
                        </div>
                        <div class="inputbox">
                            <label>Blood(>14 HB)</label>
                            <input type="text" name="address" required autocomplete="off" />
                        </div>
                        <div class="selectbox">
                            <label>Invistigate</label>
                            <select name="bgroup">
                                <option value="">Select</option>
                                <option value="A+">A+</option>
                                <option value="A-">A-</option>
                                <option value="B+">B+</option>
                                <option value="B-">B-</option>
                                <option value="AB+">AB+</option>
                                <option value="AB-">AB-</option>
                                <option value="O+">O+</option>
                                <option value="O-">O-</option>
                            </select>
                        </div>

                        
                    </div>



                    <div class="modal-footer">

                        <button type="button" class="btns" data-bs-dismiss="modal">Close</button>
                        <input name="save" type="submit" class="btns" value="Save" />

                    </div>
                </form>
            </div>

        </div>

    </div>
</div>

@section scripts{
<script>
        $(document).ready(function () {
            $('#donorId').change(function () {
                var selectedDonorId = $(this).val();
                var selectedDonor = @Html.Raw(Json.Serialize(Model.DonorList));

                var donor = selectedDonor.find(function (item) {
                    return item.id == selectedDonorId;
                });

                if (donor) {
                    $('#SelectedDonorName').val(donor.name);
                    $('#SelectedDonorAge').val(donor.age);
                    $('#SelectedDonorGender').val(donor.gender);
                }
            });
        });
    </script>
    }

