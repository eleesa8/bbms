@page
@model bbms.Pages.transfare.view_transfareModel
@{
}

<body class="bg-content">
    <script src="~/js/jquery-3.7.1.js"></script>
    <main class="dashboard">
        <div class="container">

          

            <center>
                <h1 style=" font-family : Tahoma; font-weight : bolder; color :var(--sidebar-color);"> Blood Bank System</h1>
                <h2 style=" font-family : Tahoma; font-weight : bolder; color :var(--sidebar-color);">Investigation</h2>
                <i class="fas fa-droplet" style="color :var(--sidebar-color);"></i>
            </center>
            <div class="row">
                <div class="col">

                    <div class="slide-container">
                        <div class="slide-content">
                            <div class="card-wrapper">
                                <h2 style="font-size:16px; font-weight:800; font-family: Tahoma; text-align:center">Persons are not allowed to donate blood anytime</h2>
                                <h4 style="font-size:16px; font-weight:800; font-family: Tahoma; text-align:left; color:#dc3545; line-height:2rem;">1.Cancer
                                    <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 6.HIV infection, AIDS</span>
                                </h4>
                                <h4 style="font-size:16px; font-weight:800; font-family: Tahoma; text-align:left; color:#dc3545; line-height:2rem;">2.Cardic Disease
                                    <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 7. Age > 60yrs and < 18yrs </span>
                                </h4>
                                <h4 style="font-size:16px; font-weight:800; font-family: Tahoma; text-align:left; color:#dc3545; line-height:2rem;">3.Sever Lung Disease
                                    <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 8. Weight < 55</span>
                                </h4>
                                <h4 style="font-size:16px; font-weight:800; font-family: Tahoma; text-align:left; color:#dc3545; line-height:2rem;">4.Hepatitis B & C
                                    <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 9. Chronic Alcoholism</span>
                                </h4>
                                <h4 style="font-size:16px; font-weight:800; font-family: Tahoma; text-align:left; color:#dc3545; line-height:2rem;">5.HB Less Then 13g/dl
                                    <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 10. Clothing Disorders</span>
                                </h4>
                           </div>
                        </div>
                    </div>

                </div>
                <div class="col">
                    <br />
                    <form method="POST">

                        <div class="content">

                            <div class="selectbox">
                                <label>Donor ID</label>
                                <select  class="form-control">
                                    <option value="">-- Select Donor --</option>
                                </select>
                            </div>
                            <div class="inputbox">
                                <label>Donor Name</label>
                                <input type="text" name="name" required autocomplete="off" />
                            </div>

                            <div class="inputbox">
                                <label>Donor Age(< 55, > 18)</label>
                                <input type="text" name="age" required autocomplete="off" />
                            </div>
                            <div class="inputbox">
                                <label>Donor Gender</label>
                                <input type="text" name="gender" required autocomplete="off" />
                            </div>
                            <div class="inputbox">
                                <label>Blood(>14 HB)</label>
                                <input type="text" name="address" required autocomplete="off" />
                            </div>
                            <div class="selectbox">
                                <label>Invistigate</label>
                                <select name="bgroup">
                                    <option value="">Select</option>
                                    <option value="A+">A+</option>
                                    <option value="A-">A-</option>
                                    <option value="B+">B+</option>
                                    <option value="B-">B-</option>
                                    <option value="AB+">AB+</option>
                                    <option value="AB-">AB-</option>
                                    <option value="O+">O+</option>
                                    <option value="O-">O-</option>
                                </select>
                            </div>
                        </div>
                        <center>
                            <a href="" data-bs-toggle="modal" data-bs-target="#add" class="btn btns"><i class="fas fa-add"></i> Add</a>
                            <button name="update" id="btnUpdate" asp-page-handler="Update" type="submit" class="btns"><i class="fas fa-edit"></i> Update</button>
                        </center>
                    </form>
                </div>
            </div>
            <br /><br />
            <table class="table table-bordered table-stripped" id="mytable" style="width: 115%;">
                <tr>
                <thead class="bg-danger text-white" style="font-family:Tahoma; text-align:center; font-size:16px; font-weight:700;">
                <th>DID</th>
                <th>DName</th>
                <th>Gender</th>
                <th>DAge</th>
                <th>BGroup</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Date</th>
                <th>Action</th>

                </thead>
                </tr

               
                <tfoot>
                    <tr class="" style="background:red">
                        <td colspan="9" style="height: 10px"></td>
                    </tr>
                </tfoot>


            </table>
        </div>
    </main>
</body>

